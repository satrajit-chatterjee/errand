<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light" />

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/errand_bg</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorOnBackground">@color/white</item>
    </style>

    <style name="adfont" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="color">@color/white</item>
        <item name="font">@font/barlow_thin</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="nav_drawer_style" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/avenir</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/black</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/mainTheme</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">#1F710E</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- reference our hint & error styles -->
        <item name="hintTextAppearance">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/mainTheme</item>
        <item name="colorControlHighlight">@color/mainTheme</item>
    </style>

</resources>
