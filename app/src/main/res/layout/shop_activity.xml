<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/shop_header_bg"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shop_view"
        android:layout_width="match_parent"
        app:strokeWidth="1dp"
        android:layout_marginTop="130dp"
        app:cardCornerRadius="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:strokeColor="@color/stroke_color"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:id="@+id/text_shop_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Place Your Order Now!"
                    android:textColor="@color/black"
                    android:fontFamily="@font/avenir"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/shop_list_prompt"
            android:layout_width="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Create a list of your items:"/>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/shop_scroll_view"
            android:layout_marginTop="120dp"
            android:layout_width="match_parent"
            android:layout_height="280dp">

           <LinearLayout
               android:id="@+id/shop_items_layout"
               android:paddingHorizontal="10dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:background="@drawable/lin_lay_border"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/item_count_parent"
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:fontFamily="@font/avenir"
                       android:textSize="20dp"
                       android:layout_marginLeft="5dp"
                       android:text="1"/>

                   <View
                       android:layout_width="1dp"
                       android:layout_marginLeft="10dp"
                       android:layout_height="match_parent"
                       android:background="#000000" />

                   <EditText
                       android:id="@+id/init_item"
                       android:layout_width="200dp"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/avenir"
                       android:hint="Add item name"
                       android:textColor="@color/black"
                       android:inputType="textPostalAddress"
                       android:theme="@style/ShopEditTextTheme"
                       android:maxLines="1"
                       android:layout_marginLeft="15dp"
                       />

                   <TextView
                       android:id="@+id/init_subtract"
                       android:layout_width="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:fontFamily="@font/avenir_bold"
                       android:textStyle="bold"
                       android:textSize="30dp"
                       android:text="-"
                       android:textColor="#1A850B"
                       android:layout_height="wrap_content"
                       android:onClick="init_remove"/>

                   <TextView
                       android:id="@+id/init_count"
                       android:layout_marginTop="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:fontFamily="@font/avenir_bold"
                       android:textColor="#1A850B"
                       android:textStyle="bold"
                       android:textSize="20dp"
                       android:layout_marginLeft="10dp"
                       android:text="1"/>

                   <TextView
                       android:id="@+id/init_add"
                       android:layout_width="wrap_content"
                       android:fontFamily="@font/avenir_bold"
                       android:textStyle="bold"
                       android:layout_marginLeft="5dp"
                       android:textSize="23dp"
                       android:text="+"
                       android:textColor="#1A850B"
                       android:layout_height="wrap_content"
                       android:onClick="init_add"/>

               </LinearLayout>

           </LinearLayout>



        </androidx.core.widget.NestedScrollView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/shop_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:layout_anchor="@id/shop_view"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/baseline_add_white_18dp"
            android:backgroundTint="@color/black"
            app:tint="@color/white"
            app:borderWidth="0dp"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginBottom="140dp">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

        <View android:id="@+id/separator"
            android:background="#000000"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="135dp"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="110dp">
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/avenir_bold"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:text="Delivery starts at Rs. 90"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/info"
                android:onClick="shop_info"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/place_order"
            android:layout_width="300dp"
            android:backgroundTint="#FF5722"
            android:text="Place Order"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="60dp"/>



    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:liftOnScroll="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:stateListAnimator="@animator/always_elevated">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="#FFFFFF"
                app:expandedTitleMarginStart="72dp"
                app:expandedTitleMarginBottom="28dp"
                app:titleEnabled="false"
                android:background="@drawable/shop_header_bg">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/cake_piece"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/pawprint"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/diet"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="180dp"
                    android:src="@drawable/dog_2"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="220dp"
                    android:src="@drawable/fish_2"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="280dp"
                    android:src="@drawable/trolley"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="fitStart"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="340dp"
                    android:src="@drawable/pie"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="5" />



                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/topAppBar_shop"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/Theme.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/menu_main">

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/menu_main"
            android:layout_gravity="bottom"
            app:itemTextColor="@color/black"
            app:itemHorizontalTranslationEnabled="true"
            app:itemTextAppearance="@style/nav_drawer_style"
            app:itemIconTint="@color/mainTheme">
        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


